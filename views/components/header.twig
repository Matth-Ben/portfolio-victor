{% import "@utils/search.twig" as search %}

<header class="header container">
    <nav class="flex justify-between items-center mt-margin">
        <a class="block h-50 child:h-full" href="{{ function('get_bloginfo', 'url') }}">
            {% include "@assets/svg/logo.svg" %}
        </a>
        {% if menus['header-primary'] and menus['header-primary'].items %}
            <ul class="flex gap-xl">
                {% for item in menus['header-primary'].items %}
                    <li><a href="{{ item.url }}">{{ item.name }}</a></li>
                {% endfor %}

                {# Ajouter le switcher de langue #}
                {% if (fn('function_exists', 'pll_the_languages' )) %}
                    {{ fn('pll_the_languages', { echo: 0 }) }}
                {% endif %}
            </ul>
        {% endif %}

        {{ search.default() }}
    </nav>
</header>