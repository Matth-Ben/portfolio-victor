{% macro default(data) %}
    {% import "@components/flex-content.twig" as flex_content %}

    <div class="section">
        <div class="grid grid-cols-12 gap">
            {% if data.title %}
                <div class="col-span-full d:col-span-8 d:col-start-3">
                    <h2 class="mb-xxl split animation animation--text" show-element>{{ data.title }}</h2>
                </div>
            {% endif %}
            <div class="col-span-full d:col-span-8 d:col-start-3">
                {% include "@components/flex-content.twig" with {content: data.content} %}
                {{ flex_content.default(data.content) }}
            </div>
        </div>
    </div>
{% endmacro %}
